package id

id1 = { [:alpha:] [[_][:alnum:]]* }			    -- allows dashes
id2 = { [:alpha:] [[_-][:alnum:]]* }			    -- ... and underscores
id3 = { [:alpha:] [[$_-][:alnum:]]* }			    -- ... and dollar signs

id = id3
dotted = { id {"." id}+ }

local alias h = [:xdigit:]
guid = {h{8} "-" {h{4} "-"}{3} h{12}}

any = dotted / id / guid

